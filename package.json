{
  "name": "salvador",
  "version": "1.0.0",
  "description": "<h1 align=\"center\">Salvador Aar√≥n Palma Navea</h1> <hr>",
  "main": "src/app.js",
  "scripts": {
    "dev": "budo src/app.js --open --live --pushstate --",
    "deps": "dependency-check . && dependency-check . --extra --no-dev",
    "copy": "mkdir -p dist/src/assets && cp CNAME index.html src/data.json dist/ && cp -R src/assets/ dist/src",
    "build:js": "browserify -e src/app.js -o dist/app.js -g uglifyify | uglifyjs",
    "build": "npm run copy && NODE_ENV=production browserify -e src/app.js -o dist/app.js",
    "test": "npm run deps && standard --verbose | snazzy"
  },
  "browserify": {
    "transform": [
      "sheetify/transform",
      "babelify"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YerkoPalma/salvador.git"
  },
  "author": "YerkoPalma",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/YerkoPalma/salvador/issues"
  },
  "homepage": "https://github.com/YerkoPalma/salvador#readme",
  "devDependencies": {
    "babel-preset-es2015": "^6.13.2",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "budo": "^8.3.0",
    "dependency-check": "^2.6.0",
    "html-minifier": "^3.0.2",
    "insert-css": "^0.2.0",
    "live-server": "^1.0.0",
    "sheetify": "^5.0.5",
    "snazzy": "^4.0.1",
    "standard": "^7.1.2",
    "uglifyify": "^3.0.2",
    "uglifyjs": "^2.4.10"
  },
  "dependencies": {
    "choo": "^3.2.0"
  }
}
