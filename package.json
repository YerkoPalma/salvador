{
  "name": "salvador",
  "version": "1.0.0",
  "description": "<h1 align=\"center\">Salvador Aar√≥n Palma Navea</h1> <hr>",
  "main": "src/app.js",
  "scripts": {
    "start": "bankai -V -A 0.0.0.0 index.js",
    "dev": "budo src/app.js --open --live --pushstate --host 0.0.0.0 --port 8080 --",
    "deps": "dependency-check . && dependency-check . --extra --no-dev",
    "copy": "mkdir -p dist/src/assets && cp CNAME index.html dist/ && cp -R src/assets/ dist/src && cp -R src/data.json dist/",
    "build:js": "browserify -e src/app.js -o dist/app.js -g uglifyify | uglifyjs",
    "build": "npm run copy && NODE_ENV=production browserify -e src/app.js -o dist/app.js -t envify -g uglifyify | uglifyjs",
    "deploy": "npm run build && gh-pages -d dist",
    "test": "npm run deps && standard --verbose | snazzy"
  },
  "browserify": {
    "transform": [
      "sheetify/transform",
      "babelify"
    ]
  },
  "standard": {
    "ignore": [
      "service-worker.js",
      "src/lg-utils.js",
      "src/lightgallery.js",
      "dist/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YerkoPalma/salvador.git"
  },
  "author": "YerkoPalma",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/YerkoPalma/salvador/issues"
  },
  "homepage": "https://github.com/YerkoPalma/salvador#readme",
  "devDependencies": {
    "babel-preset-es2015": "^6.13.2",
    "babelify": "^7.3.0",
    "bankai": "^9.0.0-1",
    "browserify": "^13.1.0",
    "budo": "^8.3.0",
    "choo-log": "^7.2.1",
    "dependency-check": "^2.6.0",
    "envify": "^3.4.1",
    "gh-pages": "^0.12.0",
    "html-minifier": "^3.0.2",
    "insert-css": "^0.2.0",
    "lightgallery.js": "0.0.3",
    "live-server": "^1.0.0",
    "sheetify": "^5.0.5",
    "snazzy": "^4.0.1",
    "standard": "^7.1.2",
    "uglifyify": "^3.0.2",
    "uglifyjs": "^2.4.10"
  },
  "dependencies": {
    "choo": "^6.0.0-4",
    "lg-video.js": "0.0.3",
    "nanocomponent": "^6.0.0"
  }
}
